<h1>Корзина</h1>



<div id="cart">
  {{#if companies.length}}


  <table>
    <thead>
      <tr>
        <th>Название</th>
        <th>Количество</th>
        <th>Действия</th>
      </tr>
    </thead>
    <tbody>

      {{#each companies}}
      <tr>
        <td>{{title}}</td>
        <td>{{count}}</td>
        <td>

        </td>

        <td>
          <button class="btn btm-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Удалить проект</button>
        </td>
      </tr>
      {{/each}}
    </tbody>
  </table>

  <p><strong>Сумма:</strong> <span class="minDeposit">{{minDeposit}}</span></p>

  <form action="/orders" method="POST">


    <div>
      <span>Чтобы участвовать введите ивайт-код:</span>
      <input id="email" name="email" type="email" class="validate" required>
      <label for="email">Инвайт-код</label>
      <span class="helper-text" data-error="Введите ивайт-код"></span>
    </div>

    <input type="hidden" name="_csrf" value="{{csrf}}">

    <button type="submit" class="btn">Заплатить</button>
  </form>
  {{else}}
  <p>Корзина пуста</p>
  {{/if}}
  {{#if inviteError}}
  <p class="alert">{{inviteError}}</p>
  {{/if}}
</div>