<h1>Все MLM-проекты</h1>



{{#if companies.length}}
{{#each companies}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-image">
        <img src="{{img}}" alt="{{title}}">
      </div>
      <div class="card-content">
        <span class="card-title">{{title}}</span>
        <p>{{description}} </p>
        <p>Минимальный взнос: <span class="minDeposit">{{minDeposit}}</span></p>

      </div>
      <div class="card-action actions">
        <a href="/companies/{{id}}" target="_blank">Подробнее</a>
        {{#if @root.isAuth}}

        {{#ifeq userId._id @root.userId}}
        <a href="/companies/{{id}}/edit?allow=true">Редактировать</a>
        {{/ifeq}}

        <form action="/cart/add" method="POST">

          <input type="hidden" name="_csrf" value="{{@root.csrf}}">
          <input type="hidden" name="id" value="{{id}}">
          <button type="submit" class="btn btn-primary">Участвовать</button>
        </form>
        {{/if}}
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p>Проектов пока нет</p>
{{/if}}