<h1>Мои МЛМ-проекты</h1>



{{#if orders.length}}
{{#each orders}}
<div class="row">
  <div class="col s6 offset-s3">
    <div class="card">
      <div class="card-content">
        <span class="card-title">
          Транзакция <small>{{_id}}</small>
        </span>
        <p class="date">{{date}}</p>
        <p><em>{{user.userId.name}}</em> ({{user.userId.email}})</p>

        <ol>
          {{#each companies}}
          <li>
            {{company.title}} (x<strong>{{count}}</strong>)
          </li>
          {{/each}}
        </ol>

        <hr>

        <p>Сумма: <span class="minDeposit">{{minDeposit}}</span></p>
      </div>
    </div>
  </div>
</div>
{{/each}}
{{else}}
<p>Проектов пока нет</p>
{{/if}}